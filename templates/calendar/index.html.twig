{% extends 'base.html.twig' %}

{% block title %}Day2Day{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="row ">
            <div class="col-12 col-md-6 left-side">

                <div class="col-12 d-md-none fixed-top my-name">
                    <h3 class="h3 text-center">Alex Chelyshew</h3>
                </div>

                <div class="row justify-content-center">
                    <div class="col-12 col-md-8 col-lg-7  info-block">
                        {{ infoAboutDay | raw }}
                    </div>
                </div>

                <div class="col-12 d-md-none fixed-bottom info-site">
                    <h3 class="h3 text-center">http://www.calendarium.com.ua/</h3>
                </div>

            </div>
            <div class="col-12 col-md-6 right-side d-sm-none d-md-block">
                <div class="row justify-content-center">

                    <div id="monthCarousel" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">

                            {% for month in monthList %}

                                {% if month.getIsCurrent == true %}

                                    <div class="carousel-item active">

                                        <h2 class="h2 text-center">{{ month.getName }}</h2>

                                        <div class="row justify-content-center">

                                            {% for day in month.getCountOfDays %}

                                                {% if day.getIsCurrent == true %}

                                                    <div class="col-12 col-md-2 day-card current">
                                                        <h3 class="h3 text-center"> {{ day.getNumber }} </h3>
                                                        <h3 class="h3 text-center"> {{ day.getName }} </h3>
                                                    </div>

                                                {% else %}

                                                    <div class="col-12 col-md-2 day-card">
                                                        <h3 class="h3 text-center"> {{ day.getNumber }} </h3>
                                                        <h3 class="h3 text-center"> {{ day.getName }} </h3>
                                                    </div>

                                                {% endif %}

                                            {% endfor %}

                                        </div>
                                    </div>

                                {% else %}

                                    <div class="carousel-item ">

                                        <h2 class="h2 text-center">{{ month.getName }}</h2>

                                        <div class="row justify-content-center">

                                            {% for day in month.getCountOfDays %}

                                                {% if day.getIsCurrent == true %}

                                                    <div class="col-12 col-md-2 day-card current">
                                                        <h3 class="h3 text-center"> {{ day.getNumber }} </h3>
                                                        <h3 class="h3 text-center"> {{ day.getName }} </h3>
                                                    </div>

                                                {% else %}

                                                    <div class="col-12 col-md-2 day-card">
                                                        <h3 class="h3 text-center"> {{ day.getNumber }} </h3>
                                                        <h3 class="h3 text-center"> {{ day.getName }} </h3>
                                                    </div>

                                                {% endif %}

                                            {% endfor %}

                                        </div>
                                    </div>

                                {% endif %}

                            {% endfor %}

                        </div>
                        <a class="carousel-control-prev" href="#monthCarousel" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"><</span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#monthCarousel" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true">></span>
                            <span class="sr-only">Next</span>
                        </a>
                </div>

                </div>
            </div>
        </div>
    </div>

{% endblock %}
