{% extends 'base.html.twig' %}

{% block title %}Day2Day{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col12 col-md-6 left-side">
            <div class="row justify-content-center ">
                <div class="parse col-12 col-md-8 h-100">
                    {{ infoAboutDay | raw }}
                </div>
            </div>
            </div>
            <div class="col12 col-md-6 right-side">
                <div id="carouselExampleControls" class="carousel slide">
                    <div class="carousel-inner">
                        {% for month in monthList %}
                            {% if month.getIsCurrent == true %}
                                <div class="carousel-item active">
                                    <h2 class="h2 w-100 d-block text-center">{{ month.getName }}</h2>
                                    <div class="row justify-content-md-center no-gutters">
                                    {% for day in month.getCountOfDays %}
                                        {% if day.getIsCurrent == true %}
                                            <div class="day-card  col-12 col-md-2">
                                                <div class="day-card-overlay currentDay col-12 col-md-9">
                                                    <h3 class="h3 w-100 d-block text-center">{{ day.getNumber }}</h3>
                                                    <h3 class="h3 w-100 d-block text-center">{{ day.getName }}</h3>
                                                </div>
                                            </div>

                                        {% else %}
                                            <div class="day-card col-12 col-md-2">
                                                <div class="day-card-overlay col-12 col-md-9">
                                                    <h3 class="h3 w-100 d-block text-center">{{ day.getNumber }}</h3>
                                                    <h3 class="h3 w-100 d-block text-center">{{ day.getName }}</h3>
                                                </div>
                                            </div>
                                        {% endif %}
                                    {% endfor %}
                                    </div>

                                </div>
                            {% else %}
                                <div class="carousel-item">
                                    <h2 class="h2 w-100 d-block text-center">{{ month.getName }}</h2>
                                    <div class="row  justify-content-md-center">
                                    {% for day in month.getCountOfDays %}
                                        <div class="day-card col-12 col-md-2">
                                            <div class="day-card-overlay col-12 col-md-9">
                                                <h3 class="h3 w-100 d-block text-center">{{ day.getNumber }}</h3>
                                                <h3 class="h3 w-100 d-block text-center">{{ day.getName }}</h3>
                                            </div>
                                        </div>
                                    {% endfor %}
                                    </div>

                                </div>
                            {% endif %}

                        {% endfor %}
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"> < </span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"> > </span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
